<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cfg.codeforgood.kshamata.ThirdFragment">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="79dp"
        android:text="Location"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/save_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_marginLeft="76dp"
        android:layout_marginStart="76dp"
        android:layout_toEndOf="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:text="Detect Location" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="35dp"
        android:text="Accomodation"
        android:textSize="20sp" />

    <RadioButton
        android:id="@+id/accomodation_sharing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="15dp"
        android:text="Sharing" />

    <RadioButton
        android:id="@+id/accomodation_individual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/accomodation_sharing"
        android:layout_alignLeft="@+id/save_location"
        android:layout_alignStart="@+id/save_location"
        android:text="Individual" />

    <EditText
        android:id="@+id/expenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/accomodation_sharing"
        android:layout_alignStart="@+id/accomodation_sharing"
        android:layout_below="@+id/accomodation_sharing"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Enter approximate expenses..."
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/expenses"
        android:layout_alignStart="@+id/expenses"
        android:layout_below="@+id/expenses"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Monthly Savings..."
        android:inputType="numberDecimal" />

    <ImageButton
        android:id="@+id/take_pic"
        android:layout_width="300dp"
        android:layout_height="120dp"

        android:layout_marginTop="15dp"
        android:src="@mipmap/ic_add_to_photos_white_24dp"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>


